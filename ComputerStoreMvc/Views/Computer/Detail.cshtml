@{
    ViewData["Title"] = "Computer Details";
}

<h1>@Model.Name</h1>

<div>
    <h3>Specifications</h3>
    <ul>
        @foreach (var component in Model.StandardComponents)
        {
            <li>@component.Type: @component.Spec - Price: @component.Price.ToString("C")</li>
        }
    </ul>
    <h4>Total Price: @Model.TotalPrice.ToString("C")</h4>
</div>

<div>
    <h3>Customize Your Computer</h3>
    <form asp-action="Customize" method="post">
        <input type="hidden" name="computerId" value="@Model.ID" />
        <div>
            <label for="ram">Select RAM:</label>
            <select id="ram" name="selectedRam">
                @foreach (var ram in ViewBag.RamOptions)
                {
                    <option value="@ram.Spec">@ram.Spec - Price: @ram.Price.ToString("C")</option>
                }
            </select>
        </div>
        <div>
            <label for="cpu">Select CPU:</label>
            <select id="cpu" name="selectedCpu">
                @foreach (var cpu in ViewBag.CpuOptions)
                {
                    <option value="@cpu.Spec">@cpu.Spec - Price: @cpu.Price.ToString("C")</option>
                }
            </select>
        </div>
        <div>
            <label for="gpu">Select GPU:</label>
            <select id="gpu" name="selectedGpu">
                @foreach (var gpu in ViewBag.GpuOptions)
                {
                    <option value="@gpu.Spec">@gpu.Spec - Price: @gpu.Price.ToString("C")</option>
                }
            </select>
        </div>
        <div>
            <label for="motherboard">Select Motherboard:</label>
            <select id="motherboard" name="selectedMotherboard">
                @foreach (var motherboard in ViewBag.MotherboardOptions)
                {
                    <option value="@motherboard.Spec">@motherboard.Spec - Price: @motherboard.Price.ToString("C")</option>
                }
            </select>
        </div>
        <div>
            <label for="psu">Select PSU:</label>
            <select id="psu" name="selectedPsu">
                @foreach (var psu in ViewBag.PsuOptions)
                {
                    <option value="@psu.Spec">@psu.Spec - Price: @psu.Price.ToString("C")</option>
                }
            </select>
        </div>
        <button type="submit">Customize</button>
    </form>
</div>

<a asp-action="Index">Back to Computer List</a>