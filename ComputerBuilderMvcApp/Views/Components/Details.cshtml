@model ComputerBuilderMvcApp.Models.Component

@{
    ViewData["Title"] = Model?.Name ?? "Component Details";
}

@if (Model != null)
{
    <h1>@Model.Name</h1>
    <hr />
    <div class="row">
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-4">Component ID:</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">Type:</dt>
                <dd class="col-sm-8">@Model.Type</dd>

                <dt class="col-sm-4">Specification:</dt>
                <dd class="col-sm-8">@Model.Spec</dd>

                <dt class="col-sm-4">Price: $</dt>
                <dd class="col-sm-8"><strong>@(Model.PriceCents / 100)</strong></dd>

                @* You can add more properties from your Component model here if needed *@
            </dl>
        </div>
        <div class="col-md-5">
            @* Placeholder for component image if you add them later *@
            @* <img src="~/images/placeholder.png" alt="@Model.Name" class="img-fluid rounded mb-3" /> *@
            
            <h4>Add to Cart</h4>
            <form asp-controller="Cart" asp-action="AddSingleComponentToCart" method="post">
                <input type="hidden" name="componentId" value="@Model.Id" />
                <div class="input-group mb-3" style="max-width: 200px;">
                    <label class="input-group-text" for="quantity-@Model.Id">Quantity</label>
                    <input type="number" name="quantity" id="quantity-@Model.Id" value="1" min="1" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-cart-plus"></i> Add to Cart
                </button>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" asp-route-category="@Model.Type" class="btn btn-outline-secondary">Back to @Model.Type List</a>
        <a asp-action="Index" asp-route-category="all" class="btn btn-outline-secondary ms-2">Back to All Components</a>
    </div>
}
else
{
    <h1>Component Not Found</h1>
    <p>The component you are looking for could not be found.</p>
    <a asp-action="Index" class="btn btn-primary">Back to Components List</a>
}