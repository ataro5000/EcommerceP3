@model IEnumerable<ComputerBuilderMvcApp.Models.Component>

@{
    ViewData["Title"] = "Available Components";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Specification</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var component in Model)
            {
                <tr>
                    <td>@component.Type</td>
                    <td>@component.Spec</td>
                    <td>@(component.PriceCents /100)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No components found.</td>
            </tr>
        }
    </tbody>
</table>