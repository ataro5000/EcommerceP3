@model IEnumerable<ComputerBuilderMvcApp.ViewModels.ComputerViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Computer Builder</h1>
    <p>Build your dream PC or choose from our pre-configured models!</p>
</div>

<hr />

@if (Model != null && Model.Any())
{
    <h2>Featured Computers</h2>
    <div class="row">
        @foreach (var computer in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@computer.Name</h5>
                        <p class="card-text">Price: @computer.TotalPrice.ToString("C")</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Computers" asp-action="Details" asp-route-id="@computer.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                                <!-- Add to cart button if desired -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Check out our <a asp-controller="Computers" asp-action="Index">full list of computers</a>!</p>
}