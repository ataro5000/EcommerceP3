@{
    ViewData["Title"] = "Feedback";
}
<h1>@ViewData["Title"]</h1>

<p>We value your feedback. Please let us know how we can improve.</p>

<form method="post" asp-action="SubmitFeedback"> @* Assuming a SubmitFeedback action *@
    <div class="mb-3">
        <label for="name" class="form-label">Your Name (Optional)</label>
        <input type="text" class="form-control" id="name" name="FeedbackName">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Your Email (Optional)</label>
        <input type="email" class="form-control" id="email" name="FeedbackEmail">
    </div>
    <div class="mb-3">
        <label for="feedbackText" class="form-label">Your Feedback</label>
        <textarea class="form-control" id="feedbackText" name="FeedbackText" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Feedback</button>
</form>