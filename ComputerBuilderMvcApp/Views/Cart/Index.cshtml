@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>Your Shopping Cart</h1>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty. Please add some items.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Computer.Name</td>
                    <td>@item.Computer.TotalPrice.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Computer.TotalPrice * item.Quantity).ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Cart" method="post">
                            <input type="hidden" name="computerId" value="@item.Computer.ID" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.TotalPrice.ToString("C")</h3>

    <form asp-action="Checkout" asp-controller="Cart" method="get">
        <button type="submit" class="btn btn-primary">Proceed to Checkout</button>
    </form>
}