@model ComputerBuilderMvcApp.Models.Cart

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (Model != null && Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ComputerName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Subtotal.ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="computerId" value="@item.ComputerId" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <div class="text-end mt-3">
        <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
        <a asp-controller="Computers" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
    </div>
}
else
{
    <p>Your cart is empty.</p>
    <a asp-controller="Computers" asp-action="Index" class="btn btn-primary">Browse Computers</a>
}