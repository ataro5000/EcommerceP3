@model ComputerBuilderMvcApp.Models.Cart

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model != null && Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                @* Removed "Details" column as each item is just a component *@
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.CartItemName</td>
                    <td>@item.CartItemQuantity</td>
                    <td>@((item.CartItemPriceCents / 100.0m).ToString("C"))</td> @* Calculate unit price from cents *@
                    <td>@item.Subtotal.ToString("C")</td>
                    <td>
                        <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Total:</strong></td> @* Adjusted colspan *@
                <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <div class="text-end mt-3">
        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a> @* Or link to builder/components *@
    </div>
}
else
{
    <p>Your cart is empty.</p>
    <a asp-controller="Builder" asp-action="Details" class="btn btn-primary">Start Building a PC</a>
    <a asp-controller="Components" asp-action="Index" class="btn btn-info ms-2">Browse Individual Components</a>
}